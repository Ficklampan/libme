CC ?= LLVM

project: {
  name "libme"
  description "A library made for Makeit and the MurderEngine"
  version "2020"
  out libme
  lang CXX
  kind STATIC_LIBRARY
  cc $CC
}

cflags = [ "-g" "-Wall" "-Wextra" "-std=c++20" ]
sources = [
  "$(DIR)/src/memory.cpp"
  "$(DIR)/src/filesystem.cpp"
]

add_include_directory: [ "$(DIR)/include/libme" ]

add_cflags: [ CXX ], [ "-g" "-Wall" "-Wextra" "-std=c++20" ]
files: $sources
